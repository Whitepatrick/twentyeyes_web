%html
  %head
    %link{:href => "/public/favicon.ico", :rel => "Shortcut Icon"}/
    %title twenty eyes dot org
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "Patrick White", :name => "keywords"}/
    %meta{:content => "nerd", :name => "keywords"}/
    %meta{:content => "Patrick White", :name => "author"}/
    / Bootstrap
    %link{:href => "/vendor/bootstrap/css/bootstrap.css", :rel => "stylesheet"}/
  %body
    / Static navbar
    %nav.navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.navbar-brand{href: "/posts"} twenty eyes dot org
      / Collect the nav links, forms, and other content for toggling
      .collapse.navbar-collapse.navbar-collapse
        %ul.nav.navbar-nav
          %li.active
            %a{href: "/posts"} Posts
          %li
            %a{href: "/about_me"} About Me
          %li
            %a{href: "/contact"} Contact
          / /.navbar-collapse
    = yield
/ Placed at the end of the document so the pages load faster
%script{src: "https://code.jquery.com/jquery-1.11.3.min.js"}
%script{src: "https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.5/js/bootstrap.min.js"}
%script{src: "https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js"}
%script{src: "https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"}