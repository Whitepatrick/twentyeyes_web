%html
  %head
    %link{:href => "/public/favicon.ico", :rel => "Shortcut Icon"}/
    %title twenty eyes dot org
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "Patrick White", :name => "keywords"}/
    %meta{:content => "nerd", :name => "keywords"}/
    %meta{:content => "Patrick White", :name => "author"}/
    / Bootstrap
    %link{:href => "/vendor/bootstrap/css/bootstrap.css", :rel => "stylesheet"}/
    / HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
  %script{:src => "https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"}
  %script{:src => "https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"}
  %body
    / Static navbar
    %nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"} twenty eyes dot org
        / Collect the nav links, forms, and other content for toggling
        #nav-collapsed.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active
              %a{:href => "/posts"} Posts
            %li
              %a{:href => "/about_me"} About Me
            %li
              %a{:href => "/contact"} Contact
    / /.navbar-collapse
    .container-fluid
      = yield
    / jQuery (necessary for Bootstrap's JavaScript plugins)
    %script{:src => "/vendor/jquery-1.9.1.min.js"}